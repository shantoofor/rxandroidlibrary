<resources>
    <!--搜索框样式-->
    <style name="search_view">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textColorHint">@android:color/white</item>
        <item name="android:background">@drawable/selector_search_view</item>
        <item name="android:paddingTop">6dp</item>
        <item name="android:paddingBottom">6dp</item>
        <item name="android:paddingLeft">4dp</item>
        <item name="android:singleLine">true</item>
    </style>

    <!--字体默认样式-->
    <style name="Text_Default">
        <item name="android:textSize">@dimen/rx_text_default_size</item>
        <item name="android:textColor">@color/rxColorTextDefault</item>
        <item name="android:gravity">center</item>
    </style>
</resources>
